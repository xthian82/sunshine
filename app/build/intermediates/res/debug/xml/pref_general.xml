<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_location_label"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference android:defaultValue="@string/pref_time_units_metrics"
        android:key="@string/pref_time_units_key"
        android:title="@string/pref_time_units_label"
        android:entries="@array/pref_time_units_entries"
        android:entryValues="@array/pref_time_units_values">

    </ListPreference>

</PreferenceScreen>
