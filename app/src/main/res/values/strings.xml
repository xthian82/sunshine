<resources xmlns:xliff="http://schemas.android.com/apk/res-auto">
    <string name="app_name">Sunshine</string>
    <string name="hello_world">Hello world!</string>
    <string name="action_settings">Settings</string>
    <string name="action_refresh">Refresh</string>
    <string name="title_activity_detail">DetailActivity</string>

    <string name="pref_location_key" translatable="false">location</string>
    <string name="pref_location_label">Location</string>
    <string name="pref_location_default" translatable="false">2420,py</string>

    <string name="pref_time_units_key" translatable="false">timeUnit</string>
    <string name="pref_time_units_label">Pick your Units</string>
    <string name="pref_time_units_title" translatable="false">Time Unit</string>
    <string name="pref_time_units_metrics" translatable="false">metric</string>
    <string name="pref_time_units_imperial" translatable="false">imperial</string>
    <string name="action_map_location">Map Location</string>

    <string-array name="pref_time_units_entries">
        <item>Metric</item>
        <item>Imperial</item>
    </string-array>

    <string-array name="pref_time_units_values">
        <item>metric</item>
        <item>imperial</item>
    </string-array>

    <!-- Date label when displaying today's weather forecast [CHAR LIMIT=20] -->
    <string name="today">Today</string>

    <!-- Date label when displaying tomorrow's weather forecast [CHAR LIMIT=20] -->
    <string name="tomorrow">Tomorrow</string>

    <!-- Date format for displaying day of week and date (i.e. Mon Jun 1) [CHAR LIMIT=20] -->
    <string name="format_full_friendly_date">
        <xliff:g id="day">%1$s</xliff:g>, <xliff:g id="date">%2$s</xliff:g>
    </string>
    <!-- Temperature Format -->
    <string name="format_temperature">
        <xliff:g id="temp">%1.0f</xliff:g>\u00B0
    </string>
    <!-- Humidity -->
    <string name="format_humidity">
        HUMIDITY: <xliff:g id="humd">%1.0f</xliff:g>%%
    </string>
    <!-- Wind -->
    <string name="format_wind">
        WIND: <xliff:g id="wind">%1.0f</xliff:g> Km/H <xliff:g id="deg">%2.0f</xliff:g>
    </string>

    <!-- Pressure -->
    <string name="format_pressure">
        PRESSURE: <xliff:g id="press">%1.0f</xliff:g> hPa
    </string>

</resources>
