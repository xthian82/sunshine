<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res/snowtech.com.py.sunshine.app"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    <EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_location_label"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" /> -->

    <snowtech.com.py.sunshine.app.LocationEditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_location_label"
        android:defaultValue="@string/pref_location_default"
        android:singleLine="true"
        android:inputType="text"
        custom:minLength="3" />

    <ListPreference android:defaultValue="@string/pref_time_units_metrics"
        android:key="@string/pref_time_units_key"
        android:title="@string/pref_time_units_label"
        android:entries="@array/pref_time_units_entries"
        android:entryValues="@array/pref_time_units_values"
        android:summaryOn="enabled"
        android:summaryOff="not enabled">

    </ListPreference>

    <ListPreference
        android:title="@string/pref_art_pack_label"
        android:key="@string/pref_art_pack_key"
        android:defaultValue="@string/pref_art_pack_sunshine"
        android:entryValues="@array/pref_art_pack_values"
        android:entries="@array/pref_art_pack_options" />

    <CheckBoxPreference android:defaultValue="@string/pref_notification_default"
        android:key="@string/pref_notification_key"
        android:title="@string/pref_notificate_user" />
</PreferenceScreen>
